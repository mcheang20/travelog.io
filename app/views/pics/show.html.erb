<div>
<h1><%= @log.title %> Posted Images <%= link_to "back to log", log_path(@log), class: "pull-right" %></h1>
  <% if @log.pics.empty? %>
    <p> No Images Posted<p>
  <% else %>
    <div>
      <% @log.pics.each do |pic| %>
        <div>
          <%=link_to (image_tag (pic.image.url(:medium))), pic.image.url(:big), data: {lightbox: "eaxmple-set", title: pic.caption }%></br>
          <% if user_is_authorized_for_pic? %>
            <%= link_to "Delete", [pic.log, pic], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this image?'} %>
          <% end %>
          <p><%= pic.caption %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
