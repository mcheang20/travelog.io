<div>
  <p class="comment-img"><%= image_tag(comment.user.image.url(:thumb)) %></p>
  <small><strong><%= link_to comment.user.username, user_path(@log.user) %></strong> commented <%= time_ago_in_words(comment.created_at) %> ago</small>
   <% if user_is_authorized_for_comment?(comment) %>
      <span class="comment-content"><%= link_to "Delete", [comment.log, comment], method: :delete, class: 'glyphicon glyphicon-trash', data: { confirm: 'Are you sure you want to delete this comment?' } %></span>
    <% end %>
  <p class="comment-body"><%= comment.body %></p>
</div>
